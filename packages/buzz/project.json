{
  "name": "buzz",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/buzz/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/buzz/dist",
        "tsConfig": "packages/buzz/tsconfig.lib.json",
        "main": "packages/buzz/src/index.ts",
        "format": ["esm", "cjs"],
        "additionalEntryPoints": [
          "packages/buzz/src/client/index.ts",
          "packages/buzz/src/server/index.ts"
        ],
        "sourcemap": "linked",
        "platform": "neutral",
        "generatePackageJson": true
      }
    },
    "prepare": {
      "command": "node tools/scripts/prepare.mjs buzz",
      "dependsOn": ["build"]
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs buzz {args.tag}",
      "dependsOn": ["prepare"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/buzz/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/buzz/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
